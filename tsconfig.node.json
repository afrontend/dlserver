{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["node"]
  },
  "include": [
    "vite.config.ts",
    "vitest.config.node.ts",
    "server.ts",
    "server.test.ts",
    "mcp-server-SSE.ts",
    "mcp-server-STDIO.ts",
    "types"
  ]
}
